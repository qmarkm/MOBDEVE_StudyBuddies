<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:elevation="4dp"
    android:background="@drawable/rounded_input"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Create Task"
        android:textColor="#69B665"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_activity_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter activity title"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/edit_activity_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter activity description"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minLines="3"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <LinearLayout
        android:id="@+id/lyvEditDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_input"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/calendar" />

        <EditText
            android:id="@+id/edit_activity_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:clickable="true"
            android:focusable="false"
            android:hint="Select date"
            android:inputType="date"
            android:padding="16dp"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyvEditTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgClock"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_input"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/time_green" />

        <EditText
            android:id="@+id/edit_activity_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select time"
            android:background="@drawable/rounded_input"
            android:padding="16dp"
            android:inputType="time"
            android:focusable="false"
            android:clickable="true"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/save_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_green_button"
            android:padding="12dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>