<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:elevation="4dp"
    android:background="@drawable/rounded_input"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Task"
        android:textColor="#69B665"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_activity_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter activity title"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/edit_activity_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter activity description"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minLines="3"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/edit_activity_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/edit_activity_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select time"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:inputType="time"
        android:focusable="false"
        android:clickable="true"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/save_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_green_button"
            android:padding="12dp"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/delete_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:padding="12dp"
            android:text="Delete"
            android:textColor="@color/swampyGreen"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>