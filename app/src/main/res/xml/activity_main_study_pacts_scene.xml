<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0.2,0.18,0.8,0.8)"
        motion:autoTransition="none">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/linearLayout"
               motion:framePosition="100"
               android:alpha="100" />
       </KeyFrameSet><OnSwipe motion:springMass="2.0"
        motion:dragDirection="dragEnd" motion:springStopThreshold="0.5" motion:springStiffness="0"/>
        <OnSwipe motion:touchAnchorId="@+id/imgMapTemp" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/linearLayout"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.87"
            motion:layout_constraintVertical_bias="1.0"
            motion:transitionEasing="accelerate" />
    </ConstraintSet>
</MotionScene>